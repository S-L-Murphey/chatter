// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Post {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    content String @db.VarChar(200)

    Author   Author? @relation(fields: [authorId], references: [clerkId])
    authorId String?
    likes    Like[]

    @@index([authorId])
}

model Like {
    id       String @id @default(cuid())
    authorId String
    likerId  String
    postId   String
    author   Author @relation("LikedPosts", fields: [authorId], references: [clerkId], onDelete: Cascade)
    liker    Author @relation("Likes", fields: [likerId], references: [clerkId], onDelete: Cascade)
    post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

    @@index([authorId])
    @@index([postId])
    @@index([likerId])
}

model Author {
    clerkId    String  @unique
    email      String?  @unique
    username   String? @unique
    posts      Post[]
    likes      Like[]  @relation("Likes")
    likedPosts Like[]  @relation("LikedPosts")
}
